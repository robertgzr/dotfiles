# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

#
# Variables
#

# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $term alacritty
# Your preferred application launcher
set $_menu /opt/bin/rofi
set $menu $_menu -terminal $term -modi 'drun,run,ssh' -show drun
set $wmenu $_menu -modi window -show window

# font pango:Fira Code 12
font pango:Iosevka Semibold, Fira Code, Font Awesome, Noto Sans 13

show_marks yes

#
# Output configuration
#
# You can get the names of your outputs by running: swaymsg -t get_outputs

# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
# output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
output * bg /home/robert/.background fill

# internal
# output eDP-1 res 2560x1440 pos 0,0
# desk
# output 'Dell Inc. DELL U2518D 3C4YP87AAK3L' mode 2560x1440@59.951000Hz position 0,0 scale 1
# tv
# output 'Goldstar Company Ltd LG TV 0x00009169' mode 1920x1080@60Hz position 5120,0

#
# Input configuration
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

# keyboard (built-in)
input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout us
    xkb_variant mac
    xkb_options 'caps:hyper,shift:both_capslock_cancel,grp:alt_space_toggle,eurosign:5,lvl3:ralt_switch_multikey'
    # repeat_delay 500
    # repeat_rate 1
}

# keyboard (desk)
input "65261:25700:Input_Club_Infinity_keyboard/QMK" {
    xkb_layout us
    xkb_variant mac
    xkb_options 'caps:hyper,shift:both_capslock_cancel,grp:alt_space_toggle,eurosign:5,lvl3:ralt_switch_multikey'
    # repeat_delay 500
    # repeat_rate 1
}

# trackpad
input "2:7:SynPS/2_Synaptics_TouchPad" {
      dwt enabled
      tap enabled
      scroll_method two_finger
      natural_scroll enabled
      accel_profile adaptive
      # pointer_accel 1
}

# trackpoint
input "2:10:TPPS/2_Elan_TrackPoint" {
      dwt enabled
      natural_scroll enabled
      accel_profile adaptive
      # pointer_accel 1
}

# apple trackpad
input "1452:782:Robert_Günzler’s_Trackpad" {
      tap enabled
      scroll_method two_finger
      natural_scroll enabled
      accel_profile adaptive
      # pointer_accel 1
}

input "10429:148:XP-PEN_STAR_G640_Mouse" {
    # disable the device
    events disabled

    # map_to_output HDMI-A-1
    scroll_method on_button_down
    scroll_button 331
    click_method clickfinger
    middle_emulation disabled
    accel_profile flat
    drag enabled
    tap enabled
}
set $pen "10429:148:XP-PEN_STAR_G640_Pen"
# 331 lower pen button
# 332 upper pen button
input $pen {
    # events disabled

    scroll_method on_button_down
    scroll_button 331
    click_method clickfinger
    middle_emulation disabled
    accel_profile flat
    drag enabled
    tap enabled
}

bindsym $mod+Mod1+Shift+o input $pen map_from_region 0.0x0.0 1.0x1.0
bindsym $mod+Mod1+o input $pen map_from_region 0.0x0.0 0.3x0.3; input $pen map_to_output HDMI-A-1

#
# Theme
#

set $text #FCFAF2
set $text2 #BDC0BA
set $bg #1C1C1Cf9
set $bg2 #434343
set $main #0B346Ef9
set $main2 #005CAF
set $urgent #DB4D6D
set $urgent2 #CB1B45
set $indicator #FAD689
set $indicator2 #C18A26

client.focused $main2 $main $text $indicator $main
client.focused_inactive $bg2 $bg $text2 $indicator2 $bg
client.unfocused $bg2 $bg $text2 $indicator2 $bg
client.urgent $urgent2 $urgent $text $indicator $urgent

include config.d/*
# include /etc/sway/config.d/*

exec --no-startup-id systemctl --user start sway-session.target
