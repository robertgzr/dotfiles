" .vimrc#General settings
set title
set noshowmode
set autowrite
set inccommand=split
set noshowcmd

" !
set hidden

set encoding=utf-8 nobomb
" set nocompatible
set number
set showbreak=+++
set visualbell
set noerrorbells

set hlsearch
set smartcase
set ignorecase
set incsearch

" set code folding method
" setlocal foldmethod=syntax

set pumheight=10
set lazyredraw
