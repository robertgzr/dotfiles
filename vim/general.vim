" .vimrc#General settings
set termguicolors
set title
set noshowmode
set autowrite
set inccommand=split

" !
set hidden

set encoding=utf-8 nobomb
" set nocompatible
set number
set showbreak=+++
set visualbell
set noerrorbells

set hlsearch
set smartcase
set ignorecase
set incsearch

" set code folding method
setlocal foldmethod=syntax
" completion popup behavior
set completeopt=longest,menuone
set showmatch

set lazyredraw
