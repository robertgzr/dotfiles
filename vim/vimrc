" rc Includes
source ~/.vim/components/general.vim
source ~/.vim/components/plug.vim

" centralize vimfiles
set backupdir=$DOT_DIR/vim/backups
set directory=$DOT_DIR/vim/swaps
if exists("&undodir")
	set undodir=$DOT_DIR/vim/undo
endif

colorscheme gruvbox
set background=dark
syntax enable
if has("neovim-dot-app")
    set guifont=Iosevka:h13
end
if has("vimr")
    set guifont=Iosevka:h13
    set linespace=-1
    set guicursor+=a:blinkon0
end

" cursorlines
set cursorline
" set cursorcolumn
" hi CursorLine cterm=NONE ctermbg=darkred ctermfg=white guibg=darkred guifg=white
" hi CursorLine cterm=NONE ctermbg=darkred ctermfg=white guibg=darkred guifg=white
nnoremap <Leader>c :set cursorline!<CR>
" cursorcolumn!<CR>

set fillchars=fold:-,vert:\â”‚

" share OSX clipboard
set clipboard=unnamed
" allow backspace in INSERT mode
set backspace=indent,eol,start
highlight Comment cterm=italic

"" Some Autocommands
"" For more see the components/plugin-settings.vim
" toggle spell-check if filetype is markdown
autocmd FileType markdown setlocal spell
" Disable tabs->spaces for Makefiles
autocmd FileType make setlocal noexpandtab
autocmd FileType c setlocal foldmethod=syntax
autocmd ColorScheme janah highlight Normal ctermbg=235
"" modular settings:

source ~/.vim/components/line.vim
source ~/.vim/components/plugin-settings.vim
source ~/.vim/components/keys.vim
source ~/.vim/components/indent.vim
