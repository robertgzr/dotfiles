#!/bin/sh
set -e
[ -n "$DEBUG" ] && set -x

arg0=bemenu
prompt=${MENU_PROMPT:-">"}
main_color="#0B346F"

while test $# -gt 0; do
   case "$1" in
      -run)
         arg0=bemenu-run; prompt=bin ;;
      -p)
         shift; prompt="$1" ;;
   esac
   shift
done

exec "${arg0}" \
   --no-overlap \
   --monitor=all \
   --ignorecase \
   --list=10 \
   --prompt="${prompt}" \
   --fn 'Iosevka Sparkle 11' \
   --nb '#221E1D' --nf '#fffefe' \
   --tb "$main_color" --tf '#fffefe' \
   --fb '#221E1D' --ff '#fffefe' \
   --sb '#FAD689' \
   --sf '#221E1D' \
   --hb "$main_color" \
   --hf '#FCFAF2' \
   --scb '#221E1D' --scf '#fffefe' \
   "$@"
